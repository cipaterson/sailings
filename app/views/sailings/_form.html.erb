<%= form_with model: sailing do |form| %>
  <% if form.object.errors.any? %>
    <p class="error"><%= form.object.errors.full_messages.first %></p>
  <% end %>

  <div>
      <%= form.label :name %>
      <%= form.text_field :name %>
      <%= form.label :comments %>
      <%= form.text_field :comments %>
      <%= form.label :Date %>
      <%= form.date_field :start_date %>
      <%= form.label :return_date %>
      <%= form.date_field :return_date %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
